{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "tsc ${file} --outDir dist --sourceMap --target es2021 --allowSyntheticDefaultImports",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "tsc: build - tsconfig.json"
    },
		{
			"type": "shell",
			"command": "yarn esbuild ${file}",
			"group": "build",
			"label": "esbuild"
    }
	]
}